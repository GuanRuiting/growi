{
  "$schema": "../../node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignore": ["./dist/**", "./coverage/**", "./vite.config.ts.timestamp-*"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
